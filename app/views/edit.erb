<div class="edit">

  <% if @articles == nil %>
    <form action="/article" method="post">
      Title:<br>
      <input type="text" name="title">
      <br>Price:<br>
      <input type="text" name="price">
      <br>Name:<br>
      <input type="text" name="name">
      <br>Email:<br>
      <input type="text" name="email">
      <br>Address:<br>
      <input type="text" name="address">
      <br>Category:<br>
      <input type="text" name="category">
      <br>Body:<br>
      <input type="text" name="body">
      <br>
      <input type="submit" value="Create!">
    </form>
  <% else %>
    <form action="/article/<%= @articles.id %>" method="post">
      <input type="hidden" name="_method" value="put">
      Title:<br>
      <input type="text" name="title" value="<%= @articles.title %>">
      <br>Price:<br>
      <input type="text" name="price" value="<%= @articles.price %>">
      <br>Name:<br>
      <input type="text" name="name" value="<%= @articles.name %>">
      <br>Email:<br>
      <input type="text" name="email" value="<%= @articles.email %>">
      <br>Address:<br>
      <input type="text" name="address" value="<%= @articles.address %>">
      <br>Category:<br>
      <input type="text" name="category" value="<%= @articles.category.name %>">
      <br>Body:<br>
      <input type="text" name="body" value="<%= @articles.body %>">
      <br>
      <input type="submit" value="Edit!">
    </form>
    <form action="/article/<%= @articles.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete!">
    </form>

  <% end %>


</div>
